<h1>ACTORS</h1>


<a href="http://localhost:3000/actors/new">Add a New Actor</a>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>DOB</th>
    <th>Bio</th>
    <th colspan="4"></th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
  <td>
  <img src="<%= actor.image_url %>" width="80">
  </td>
  <td>
   <%= actor.name %>
   </td>
    <td>
    <%= actor.dob %>
    </td>
    <td>
    <%= actor.bio %>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>/edit_actor">Edit</a>
    </td>
    <td>
      <a href="actors/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
